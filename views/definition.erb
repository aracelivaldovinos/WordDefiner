<h2>Meaning: <%= @definition.definition %></h2>
<h3>Word: <%= @definition.word.input %></h3>

<form action="/home/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">change meaning</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/home/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/home/<%= @definition.word.id %>">Back to <%= @definition.word.input %></a>